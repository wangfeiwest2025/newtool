{
  "version": 2,
  "builds": [
    {
      "src": "api/vercel-handler.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/vercel-handler.js"
    },
    {
      "src": "/s/(.*)",
      "dest": "/api/vercel-handler.js"
    },
    {
      "src": "/tools/(.*)",
      "dest": "/public/tools/$1.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}
